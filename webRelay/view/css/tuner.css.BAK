html {
	position: absolute;
	top:0;
	bottom: 0;
	left: 0;
	right: 0;
}
.panel {
	background: #222 !important;
}
body {
	background-color: #222;
	color:#EEE;

	margin-top: 15px;
}
ul.nav {
	height       : 60px;
}

.nav li {
	min-width   : 140px;
	min-height  : 40px;
}
.nav li a:hover {
	background-image: linear-gradient(to bottom,#cfff19,#96ff19);
}
.nav li a {
	font-weight : bold;
	font-size   : 1.8em;
	cursor      : pointer;
	text-align  : center; 
	color       : #333;
	box-shadow  : 1px 1px 2px rgba(0,0,0,0.3);
	font-weight: bold;
	font-style: italic;
	text-transform: uppercase;
}

.NSR {
	box-shadow  : 1px 1px 4px rgba(0,0,0,0.3); 
	border-bottom-right-radius: 6px;
	border-bottom-left-radius: 6px;
	background-color: #3e3e3e;
	color:#fff;
	
	position: fixed;
	top: 0;
	right: 0;
	padding-top: 5px;
	height: 28px;
	width: 80px;
	float: right;

	font-size: 12px;
	text-align: center;
	font-weight: bold;
	font-style: italic;

	z-index:999;
}

.nsr-ok {
	background-image: linear-gradient(to bottom,#cfff19,#96ff19);
	color:#333;
}
.nsr-bad {
	background-image: linear-gradient(to bottom,#ff1923,#cc0009);
	color:#333;
}
.window { 
	padding: 20px;
	margin : 20px 0;
	border : 1px solid #eee;
	border-left-width 	: 5px;
	border-radius 		: 3px;
}
.window h3  { margin-top: -5px; font-weight: bold; }
.info 		{ border-left-color: #5bc0de; }
.info h3  	{ color: #5bc0de; }
.row { margin-top: 5px; }
.slider-panel {
	font-size: 2em;
	font-weight: bold;
}
.slider-panel li {
	list-style: none;
}

.ui-slider {
	border-color: #36a9e1;  
	background  : #36a9e1;
	cursor      : pointer;
}

.critical span.ui-slider-handle.ui-state-default {
	border-color: #b01a35;
	border-radius: 30px;
}
.critical .ui-slider {
	border-color: #b01a35;
	background:   #e13654;
}
.critical span.ui-slider-handle.ui-state-default:after {
	color: #222;
	margin-top: 15px;
}
span.ui-slider-handle.ui-state-default:focus { outline:0; }
span.ui-slider-handle.ui-state-default {
	border-color: #36a9e1; 
	background  : #FFF;
	width: 3em;
	border-radius: 10px;
	highlight:none;
	margin-left: -1.5em;
}
span.ui-slider-handle.ui-state-default:after {
	text-align: center;
	width: 200%;
	margin-left: -50%;
	margin-top: -24px;
	content: attr(data-content) '';
    display: block;
    clear: both; /* if you need to break floating elements */
}

.msg-box {
	width: 100%;
	height:0;
	border: 1px solid black;
	border-radius: 6px;
	color:black;
	text-align: center;
	display: inline-block;
	text-align: left;
	padding-left: 5px;
	padding-bottom: 3px;
}

.msg-controls {
	margin-bottom: 5px;
}
.msg-ctrl {
	margin-right: 2px;
}
.msg-off {
	background-color: black;
}

.msg-uncategorized {
	background-color: #f7f7f9;
	border-color: #e1e1e8;
}

.msg-list {
	font-size: 8px;
	font-weight: normal;
}

.msg-other {
	color: #31708f;
	background-color: #d9edf7;
	border-color: #bce8f1;
}

.msg-clear {
	color: #333;
	border: 1px solid rgba(0,0,0,0.1);
}

.msg-clear:hover {
	color:#000 !important;
}

.msg-status {
	color: #3c763d;
	background-color: #dff0d8;
	border-color: #d6e9c6;
	font-weight: bold;
}

.msg-error {
	color: #a94442;
	background-color: #f2dede;
	border-color: #ebccd1;
}

.gauge-small {
	display: inline-block;
}

.gauge-med {
	width: 420px;
}
.carousel {
	background-color: #333;
}
.slider-box {
	padding: 30px;
}

.left {
	margin-left: -1.5em;
}